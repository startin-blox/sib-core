{
  "name": "@startinblox/core-next",
  "version": "0.0.0",
  "description": "The next startin blox core.",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "tsc": "tsc",
    "watch": "npm run tsc -- --watch",
    "build": "npm run build:types",
    "build:types": "tsc",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/node_modules/document-register-element/build/document-register-element.node.js",
      "<rootDir>/test/bootstrap.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ]
  },
  "author": "StartinBlox",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-typescript": "^7.3.3",
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.11",
    "babel-jest": "^24.7.1",
    "document-register-element": "^1.13.2",
    "jest": "^24.7.1",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  }
}
