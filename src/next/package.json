{
  "name": "@startinblox/core-next",
  "version": "0.0.0",
  "description": "The next startin blox core.",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "tsc": "tsc",
    "watch": "npm run tsc -- --watch",
    "build": "npm run tsc"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/node_modules/document-register-element/build/document-register-element.node.js",
      "<rootDir>/test/bootstrap.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "resolver": "jest-ts-webcompat-resolver"
  },
  "author": "StartinBlox",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.11",
    "babel-jest": "^24.7.1",
    "document-register-element": "^1.13.2",
    "jest": "^24.7.1",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  }
}
