{
  "mount": {
    "src": "/"
  },
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "tsc --noEmit",
        "watch": "$1 --watch"
      }
    ]
  ],
  "installOptions": {
    "installTypes": true
  },
  "devOptions":{
    "out": "dist_snowpack"
  },
  "buildOptions": {
    "minify": false,
    "clean": true
  }
}
