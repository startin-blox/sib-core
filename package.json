{
  "name": "@startinblox/core",
  "version": "0.0.0",
  "description": "This is a series of web component respecting both the web components standards and the Linked Data Platform convention.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "directories": {
    "example": "examples"
  },
  "files": [
    "dist",
    "doc"
  ],
  "scripts": {
    "test": "node server.js --test",
    "cypress": "node server.js --test-ui",
    "build:prod": "babel src -d dist --extensions '.ts,.js' --source-maps --no-comments --copy-files",
    "build:dev": "babel src -d dist --extensions '.ts,.js' --source-maps --copy-files",
    "watch": "npm run build:dev -- --watch --verbose",
    "check-types": "tsc",
    "serve": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@git.startinblox.com:framework/sib-core.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-parameters": "^7.7.4",
    "@babel/plugin-transform-spread": "^7.7.4",
    "@babel/plugin-transform-typescript": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@cypress/browserify-preprocessor": "^2.1.1",
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@rckeller/cypress-unfetch": "^1.0.1",
    "@types/autolinker": "^2.0.0",
    "babel-plugin-remove-import-js-extension": "0.0.3",
    "body-parser": "^1.19.0",
    "cypress": "^4.4.1",
    "document-register-element": "^1.14.3",
    "express": "^4.17.1",
    "find-free-port": "^2.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "wait-on": "^3.3.0",
    "webpack": "^4.41.2"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "major",
              "release": "major"
            },
            {
              "type": "minor",
              "release": "minor"
            },
            {
              "type": "*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/gitlab",
      "@semantic-release/npm"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
