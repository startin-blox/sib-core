{
  "name": "@startinblox/core",
  "version": "0.0.0",
  "description": "This is a series of web component respecting both the web components standards and the Linked Data Platform convention.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "directories": {
    "example": "examples"
  },
  "files": [
    "dist",
    "doc"
  ],
  "scripts": {
    "build": "snowpack build --polyfill-node",
    "watch": "npm run build -- --watch",
    "serve": "node server.js",
    "check-types": "tsc",
    "test": "node server.js --test",
    "cypress": "node server.js --test-ui"
  },
  "repository": {
    "type": "git",
    "url": "https://git.startinblox.com/framework/sib-core.git"
  },
  "author": "",
  "license": "MIT",
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "major",
              "release": "major"
            },
            {
              "type": "minor",
              "release": "minor"
            },
            {
              "type": "*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/gitlab",
      "@semantic-release/npm"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@rckeller/cypress-unfetch": "^1.0.1",
    "@snowpack/plugin-babel": "^2.1.1",
    "@types/autolinker": "^2.0.0",
    "@types/leaflet": "^1.5.17",
    "@types/markdown-it": "^10.0.2",
    "@types/pubsub-js": "^1.8.1",
    "@types/quill": "^2.0.3",
    "autolinker": "^3.14.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-remove-import-js-extension": "0.0.3",
    "body-parser": "^1.19.0",
    "cypress": "^5.3.0",
    "delta-markdown-for-quill": "0.0.9",
    "document-register-element": "^1.14.6",
    "express": "^4.17.1",
    "find-free-port": "^2.0.0",
    "fuse.js": "^6.4.1",
    "iter-tools": "^6.2.6",
    "jsonld-context-parser": "^1.3.4",
    "leaflet": "^1.7.1",
    "lit-html": "^1.3.0",
    "markdown-it": "^11.0.1",
    "pubsub-js": "^1.9.0",
    "quill": "^1.3.7",
    "quill-delta-to-markdown": "^0.6.0",
    "slim-select": "^1.26.0",
    "snowpack": "^2.12.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tui-calendar": "^1.12.14",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  }
}
